<odoo>
    <data>
        <!--Main Companies view-->
        <record id="company_tree_view" model="ir.ui.view">
            <field name="name">Comapny View</field>
            <field name="model">res.company</field>
            <field name="type">tree</field>
            <field name="active" eval="True" />
            <field name="inherit_id" ref="base.view_company_tree" />
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="id" string="ID" />
                </field>
                <field name="name" position="after">
                    <field name="company_type" string="Company Type" />
                    <field name="street" string="Street" />
                    <field name="city" string="City" />
                    <field name="state_id" string="State" />
                    <field name="zip" string="ZIP" />
                    <field name="country_id" string="Country" />
                </field>
            </field>
        </record>

        <!--Main Companies form-->
        <record id="company_form_view" model="ir.ui.view">
            <field name="name">Company Form</field>
            <field name="model">res.company</field>
            <field name="type">form</field>
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="Create Company">
                    <sheet>
                        <!--TODO: Finish the customized form-->
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>