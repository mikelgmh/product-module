<odoo>
    <template id="pm_product_report_template">
        <t t-call="report.html_container">
            <t t-call="report.external_layout">
                <t t-value="bool(docs.mapped('id'))" t-set="show_product"/>
                <!--><t t-value="True" t-set="show_project"/><-->
                <div class="page">
                    <div class="oe_structure"/>
                    <t t-foreach="docs" t-as="p">
		    <div class="row">
                        <div class="col-md-12">
                            <h2>
                                <span t-field="p.name"></span>
                            </h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Name Product</th>
                                        <th>Price</th>
					<th>Quantity</th>
					<th>Total Price</th>
					<!--><th>User</th><-->
                                    </tr>
                               </thead>
                               <tbody>
                                    <t t-set="task_ids_sorted" t-value="l.task_ids.sorted(key=lambda r:(r.stage_id.id))"/>
                                    <t t-foreach="task_ids_sorted" t-as="t">
					<tr>
                                            <td>
                                            	<span t-field="t.stage_id.name"/>
                                            </td>
					    <td>
						<span t-field="t.name"/>
					    </td>
					    <td>
						<span t-field="t.user_id"/>
					    </td>
                                            <td>
                                               <span t-field="t.date_deadline"/>
                                            </td>
					    <td>
						<progress t-att-value="t.progress" max="100"></progress>
					    </td>
					    <td>
						<span t-field="t.progress"/>%
					    </td>
                                        </tr>
					</t>
                                </tbody>
                            </table>
                        </div>
                    </div>
		    </t>
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>

    </template>

    <report id="pm_product_report"
            model="product_module.product"
            string="Almazon Products Report"
            report_type="qweb-pdf"
            name="products.pm_product_report_template"
            file="pm_product_report_template"
    />
</odoo>
